header.site-header 
    background beta
    border-bottom 6px solid gamma
    display grid
    align-items center
    grid-template-columns: 1fr
    grid-template-rows: 1fr
    height fit-content //100vh
    position relative
    top 0
    width 100%

p.brand 
    background alpha
    border 4px solid alpha + 20%
    color light
    font-size 20px
    margin 32px auto
    padding 6px 16px
    position relative
    width fit-content
    z-index 10
p.brand::before 
    background alpha
    border-radius 50%
    content ''
    position absolute
    top 50%
    left 50%
    transform translate(-50%, -50%)
    height 70px
    width 70px
    z-index -1
